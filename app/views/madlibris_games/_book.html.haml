.book-container
  .row
    .small-12.medium-8.small-centered.columns.text-center
      = image_tag(book.image_url, class: "book-image")
  .row
    .small-12.medium-8.small-centered.columns.text-center
      %h2  
        = "#{book.title}"
  .row
    .small-12.medium-8.small-centered.columns.text-center      
      %h2.subheader
        = "by #{display_authors(book)}"
  .row
    .small-12.medium-8.small-centered.columns.text-center
      %h3.subheader book description:
      %p.text-justify
        = book.synopsis