- @books.each do |book|
  .row
    .small-12.medium-8.small-centered.columns.text-center
      = image_tag book.image_url
  .row
    .small-12.medium-8.small-centered.columns.text-center      
      = form_tag(choose_madlibris_book_path)
      = hidden_field_tag(book_id: book.id)
      %input{type: "submit", class: "button small", value: "select_book"}
  .row
    .small-12.medium-8.small-centered.columns.text-center
      .h2 
        = book.title
  .row
    .small-12.medium-8.small-centered.columns.text-center      
      .h2.subheader
        = display_authors(book)
  .row
    .small-12.medium-8.small-centered.columns.text-center
      .p.text-justify
        = book.synopsis
