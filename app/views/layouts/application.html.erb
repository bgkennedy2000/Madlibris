<!DOCTYPE html>
<html>
<head>
  <title>Madlibris</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <% if notice %>
    <div class="alert-box success text-center"><%= notice %>
    <a href="#" class="close">&times;</a></div>
    <% end %>
    <% if alert %>
    <div class="alert-box warning text-center"><%= alert %>
    <a href="#" class="close">&times;</a></div>
    <% end %>

<div class="off-canvas-wrap" data-offcanvas>
  <div class='inner-wrap'>
    <nav class='tab-bar'>
      <section class="middle tab-bar-section text-center">
        <h1 class="title">Madlibris</h1>
      </section>

      <section class="right-small">
        <a class="right-off-canvas-toggle menu-icon" href="#"><span></span></a>
      </section>
    </nav>


      <!-- off canvas menu -->
      <aside class='right-off-canvas-menu'>
                <% if current_user %>
                  <ul class='off-canvas-list'>
                    <li><label><%= current_user.username %></label></li>
                    <li><%= link_to "Update Account", edit_user_registration_path %></li>
                    <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
                  </ul>
                <% end %>
      </aside>
      <a class='exit-off-canvas'></a>


<%= yield %>
    </div>
  </div>
</body>
</html>
